<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jjasonhe.swateam.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:textSize="60dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/tvWelcome"
        android:layout_above="@+id/tvToThe"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="to the"
        android:textSize="45dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/tvToThe"
        android:layout_above="@+id/tvSWATeam"
        android:layout_centerHorizontal="true" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SWATeam"
        android:textSize="60dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/tvSWATeam"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSWATeam"
        android:src="@drawable/text01_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textSize="30dp"
        android:ems="10"
        android:id="@+id/tvName"
        android:layout_below="@+id/tvSWATeam"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="City"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:id="@+id/tvCity"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/butt01_go"
        android:id="@+id/buttGo"
        android:background="@null"
        android:onClick="onClick"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tvCity"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
