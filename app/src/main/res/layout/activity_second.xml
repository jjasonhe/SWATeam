<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jjasonhe.swateam.SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="60dp"
        android:text="Welcome"
        android:id="@+id/tvWelcome"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/tvName"
        android:layout_alignTop="@+id/tvWelcome"
        android:layout_alignParentRight="true"
        android:onClick="clickProf"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/tvCity"
        android:layout_below="@+id/tvName"
        android:onClick="clickProf"
        android:layout_alignRight="@+id/tvName"
        android:layout_alignEnd="@+id/tvName" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttMozzie"
        android:onClick="clickMozzie"
        android:src="@drawable/butt02_mozzie"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttReport" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttTrap"
        android:onClick="clickTrap"
        android:src="@drawable/butt02_trap"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttPrevent"
        android:onClick="clickPrevent"
        android:src="@drawable/butt02_bin"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/buttReport" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttReport"
        android:onClick="clickReport"
        android:src="@drawable/butt02_report"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
